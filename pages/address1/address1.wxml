<view class="main">
    <view class="form-box">
        <form bindsubmit="formSubmit">
         <input name="detail" value="{{addressList.detail}}" placeholder="收货地址"/>
         <input name="number" value="{{addressList.number}}" placeholder="详细地址"/>
            <input value="{{addressList.name}}" name="name" placeholder="姓名"/>
            
           
            <input type="number" name="phone" value="{{addressList.phone}}" placeholder="电话号码"/>
            <button form-type="submit" bindtap="bc">保存</button>
        </form>
    </view>
</view>
